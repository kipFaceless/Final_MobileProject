<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Lht_Dark_green</item>
        <item name="colorPrimaryVariant">@color/Lht_Light_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="BACKGROUND">
        <item name="android:background">@color/white</item>
    </style>
    <style name="TEXTCOLOR">
        <item name="android:textColor">@color/Lht_Dark_green</item>
    </style>
    <style name="BUTTON_TINT">
        <item name="android:backgroundTint">@color/Lht_Dark_green</item>
        <item name="android:textColor">@color/Lht_White</item>
    </style>
    <style name="TEXT_CONTENT_BACKGROUND">
        <item name="android:background">@color/Lht_Light_green</item>
        <item name="android:textColor">@color/Lht_Dark_green</item>
    </style>
    <style name="ICON_COLOR_TINT">
        <item name="android:tint">@color/Lht_Dark_green</item>
    </style>
    <style name="CARD_BACKGROUND">
        <item name="android:backgroundTint">@color/Lht_White</item>
    </style>

</resources>