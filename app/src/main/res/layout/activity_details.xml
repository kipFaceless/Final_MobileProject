<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/app_margin"
    android:layout_marginHorizontal="@dimen/app_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:layout_weight="3"

            />
        <TextView
            android:id="@+id/textViewNearByPharmacies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold"
            android:text="         Nearby Pharmacies"
            android:layout_weight="1"
            android:textSize="12sp"
            style="@style/TEXT_CONTENT_BACKGROUND"
            />
    </LinearLayout>


    <ImageView
        android:id="@+id/detailImageView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <Button
                android:id="@+id/button_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description                                     +"
                style="@style/BUTTON_TINT"
                />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="add"
                android:foreground="@android:color/holo_orange_light"
                android:foregroundTint="?android:attr/textColorHighlightInverse"
                android:textSize="16sp"
                tools:visibility="invisible"
                style="@style/TEXT_CONTENT_BACKGROUND"
                />

            <Button
                android:id="@+id/button_usage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usage                                                +"
                style="@style/BUTTON_TINT"/>
            <TextView
                android:id="@+id/textViewUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="add"
                android:foreground="@android:color/holo_orange_light"
                android:foregroundTint="?android:attr/textColorHighlightInverse"
                android:textSize="16sp"
                tools:visibility="invisible"
                style="@style/TEXT_CONTENT_BACKGROUND"
                />

            <Button
                android:id="@+id/button_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INSTRUCTIONS                                   +"
                style="@style/BUTTON_TINT"
                />
            <TextView
                android:id="@+id/textViewInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="add"
                android:foreground="@android:color/holo_orange_light"
                android:foregroundTint="?android:attr/textColorHighlightInverse"
                android:textSize="16sp"
                tools:visibility="invisible"
                style="@style/TEXT_CONTENT_BACKGROUND"
                />

            <Button
                android:id="@+id/button_side_effects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIDE EFFECTS                                     +"
                style="@style/BUTTON_TINT"
                />
            <TextView
                android:id="@+id/textViewSideEffects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTintMode="add"
                android:foreground="@android:color/holo_orange_light"
                android:foregroundTint="?android:attr/textColorHighlightInverse"
                android:textSize="16sp"
                tools:visibility="invisible"
                style="@style/TEXT_CONTENT_BACKGROUND"

                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>